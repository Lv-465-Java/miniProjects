<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">

    <Properties>
        <Property name="LOG_PATTERN">[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</Property>
        <Property name="logs">/logs</Property>
    </Properties>

    <Appenders>
        <RollingFile
                name="roll-by-size"
                fileName="logs/roll-by-size/logBySize.log"
                filePattern="logs/roll-by-size/logBySize.%i.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1 MB" />
            </Policies>
        </RollingFile>

        <File name="higherWarn" fileName="logs/higher-warn.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>

        <File name="AllLogs" fileName="logs/general.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

    </Appenders>

    <Loggers>
        <Logger name="HigherWarn" additivity="false" level="trace">
            <AppenderRef ref="higherWarn" level="warn"/>
            <AppenderRef ref="roll-by-size" level="warn"/>
            <AppenderRef ref="console" level = "trace"/>
        </Logger>

        <Root level="trace" additivity="false">
            <AppenderRef ref="AllLogs"/>
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>

</Configuration>

